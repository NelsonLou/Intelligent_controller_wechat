<view class='container'>
	<navBar title='yy08' backgroundColor='rgba(0,0,0,0)' color='#000' iconColor='black'></navBar>
	<view class='YYEight' style="height: {{bodyHeight}}rpx">
		<!-- 功能说明 -->
		<view class="imagBox clearfloat" bindtap="goInroduce">
			<view class="instructionsBox right">
				<image class="instructionsIMG" src="../../assets/yy08_functional_specification.png"></image>
				<text class="instructionsTxt">功能说明</text>
			</view>
		</view>
		<!-- 模式 -->
		<view class="topBox clearfloat">
			<!-- 模式 -->
			<view class="modelBox left">
				<image class="bg" src="../../assets/yy08_dial_mask.png"></image>
				<view bindtap="handleModel" data-flag="1" class="modelItemX ItemA {{model == 1?'chose':'unChose'}}">
					<text style="margin-left: 40rpx;margin-top: 60rpx">模式一</text>
				</view>
				<view bindtap="handleModel" data-flag="2" class="modelItemX ItemB {{model == 2?'chose':'unChose'}}">
					<text style="margin-left: 40rpx;margin-top: 50rpx">模式二</text>
				</view>
				<view bindtap="handleModel" data-flag="3" class="modelItemX ItemC {{model == 3?'chose':'unChose'}}">
					<text style="margin-left: 20rpx;margin-top: 60rpx">模式三</text>
				</view>
				<view bindtap="handleModel" data-flag="4" class="modelItemX ItemD {{model == 4?'chose':'unChose'}}">
					<text style="margin-left: 20rpx;margin-top: 50rpx">模式四</text>
				</view>
			</view>
			<view class="degreeBox right">
				<!-- 按摩力度 -->
				<view class="degree">
					<view class="text">
						<text class="levelBtn" bindtap="handleDegree" data-flag="1" style="left: -35rpx">低</text>
						<text class="levelBtn" bindtap="handleDegree" data-flag="2" style="left: 99rpx">中</text>
						<text class="levelBtn" bindtap="handleDegree" data-flag="3" style="left: 240rpx">高</text>
					</view>
					<view class="line">
						<view class="showLine" wx:if='{{degree>0}}' style="width: {{degree==1?'0':degree==2?'50':'100'}}%"></view>
						<view class="boll" wx:if='{{degree>0}}'  style="left: {{degree==1?'0':degree==2?'135':265}}rpx"></view>
					</view>
				</view>
				<!-- 充放气 -->
				<view class="efforts">
					<view class="controler clearfloat">
						<view class="item left" bindtap="handleGas" data-flag="1">
							<image class="effortsBtn" src="../../assets/yy08_inflate_{{gas==1?'sel':'nor'}}.png"></image>
							<text>进气</text>
						</view>
						<view class="item" style="margin-left: 28rpx" bindtap="handleGas" data-flag="2">
							<image class="effortsBtn" src="../../assets/yy08_bleed_{{gas==2?'sel':'nor'}}.png"></image>
							<text>放气</text>
						</view>
						<view class="item right" bindtap="handleGas" data-flag="3">
							<image class="effortsBtn" src="../../assets/yy08_inflate_bleed_auto_{{gas==3?'sel':'nor'}}.png"></image>
							<text>自动</text>
						</view>
					</view>
				</view>
			</view>
		</view>
		<!-- 加热 -->
		<view class="timerBox">
			<view class="title">
				<text class="big">加热</text>
				<text class="small">（℃）</text>
			</view>
			<view class="timerMain clearfloat">
				<view class="timerLine"></view>
				<view class='timerItem left' style="margin-left: 16rpx" bindtap="handleSetTemp" data-temp="40">
					<text>40</text>
					<view class="boll">
						<image wx:if='{{temperature == 40}}' class="bollTimer" src="../../assets/yy08_heating.png"></image>
					</view>
				</view>
				<view class='timerItem left marginleftTemp' bindtap="handleSetTemp" data-temp="45">
					<text>45</text>
					<view class="boll">
						<image wx:if='{{temperature == 45}}' class="bollTimer" src="../../assets/yy08_heating.png"></image>
					</view>
				</view>
				<view class='timerItem left marginleftTemp' bindtap="handleSetTemp" data-temp="50">
					<text>50</text>
					<view class="boll">
						<image wx:if='{{temperature == 50}}' class="bollTimer" src="../../assets/yy08_heating.png"></image>
					</view>
				</view>
				<view class='timerItem left marginleftTemp' bindtap="handleSetTemp" data-temp="55">
					<text>55</text>
					<view class="boll">
						<image wx:if='{{temperature == 55}}' class="bollTimer" src="../../assets/yy08_heating.png"></image>
					</view>
				</view>
				<view class='timerItem left marginleftTemp' bindtap="handleSetTemp" data-temp="60">
					<text>60</text>
					<view class="boll">
						<image wx:if='{{temperature == 60}}' class="bollTimer" src="../../assets/yy08_heating.png"></image>
					</view>
				</view>
			</view>
		</view>
		<!-- 定时 -->
		<view class="timerBox">
			<view class="title">
				<text class="big">定时</text>
				<text class="small">（分钟）</text>
			</view>
			<view class="timerMain clearfloat">
				<view class="timerLine"></view>
				<view class='timerItem left' style="margin-left: 16rpx" bindtap="handleSwitchTimer" data-time="10">
					<text style="opacity: {{timing==10?1:0.5}}">10</text>
					<view class="boll">
						<image wx:if='{{timing == 10}}' class="bollTimer" src="../../assets/yy08_timing.png"></image>
					</view>
				</view>
				<view class='timerItem left marginleft' bindtap="handleSwitchTimer" data-time="20">
					<text style="opacity: {{timing==20?1:0.5}}">20</text>
					<view class="boll">
						<image wx:if='{{timing == 20}}' class="bollTimer" src="../../assets/yy08_timing.png"></image>
					</view>
				</view>
				<view class='timerItem left marginleft' bindtap="handleSwitchTimer" data-time="30">
					<text style="opacity: {{timing==30?1:0.5}}">30</text>
					<view class="boll">
						<image wx:if='{{timing == 30}}' class="bollTimer" src="../../assets/yy08_timing.png"></image>
					</view>
				</view>
				<view class='timerItem left marginleft' bindtap="handleSwitchTimer" data-time="40">
					<text style="opacity: {{timing==40?1:0.5}}">40</text>
					<view class="boll">
						<image wx:if='{{timing == 40}}' class="bollTimer" src="../../assets/yy08_timing.png"></image>
					</view>
				</view>
				<view class='timerItem left marginleft' bindtap="handleSwitchTimer" data-time="50">
					<text style="opacity: {{timing==50?1:0.5}}">50</text>
					<view class="boll">
						<image wx:if='{{timing == 50}}' class="bollTimer" src="../../assets/yy08_timing.png"></image>
					</view>
				</view>
				<view class='timerItem left marginleft' bindtap="handleSwitchTimer" data-time="60">
					<text style="opacity: {{timing==60?1:0.5}}">60</text>
					<view class="boll">
						<image wx:if='{{timing == 60}}' class="bollTimer" src="../../assets/yy08_timing.png"></image>
					</view>
				</view>
			</view>
		</view>
		<!-- 电源 -->
		<image class="power" bindtap="handleSwichPower" src="../../assets/yy08_power_switch_{{power?'on':'off'}}.png"></image>
	</view>
</view>