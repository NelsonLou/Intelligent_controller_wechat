<view class='container'>
	<navBar title='YY06' backgroundColor='rgba(0,0,0,0)' color='#FFF' iconColor='white'></navBar>
	<view class='YYSix' style="height: {{bodyHeight}}rpx">
		<!-- 功能说明 -->
		<view class="imagBox clearfloat" bindtap="goInroduce">
			<view class="instructionsBox right">
				<image class="instructionsIMG" src="../../assets/yy06_functional_specification.png"></image>
				<text class="instructionsTxt">功能说明</text>
			</view>
		</view>
		<!-- 温控 -->
		<view class="temperature">
			<image class="bg" src="../../assets/yy06_dial_bg.png"></image>
			<image class="calibration" wx:if='{{temperature>0}}' src="../../assets/yy06_dial_{{temperature}}.png"></image>
			<view class="num">{{temperature}}</view>
			<view class="unit">℃</view>
		</view>
		<view class="tempController clearfloat">
			<image class="tempBtn left" bindtap="handleTemp" data-flag="0" src="../../assets/yy06_subtract.png"></image>
			<text class="text">加热</text>
			<image class="tempBtn right" bindtap="handleTemp" data-flag="1" src="../../assets/yy06_plus.png"></image>
		</view>
		<!-- 中控 -->
		<view class="center clearfloat">
			<!-- 按摩力度 -->
			<view class="degree effortsClose right">
				<view class="title">揉捏力度</view>
				<view class="text">
					<text bindtap="handleKneadDegree" class="level" data-flag="1" style="left: -35rpx">低</text>
					<text bindtap="handleKneadDegree" class="level" data-flag="2" style="left: 100rpx">中</text>
					<text bindtap="handleKneadDegree" class="level" data-flag="3" style="left: 235rpx">高</text>
				</view>
				<view class="line">
					<view class="showLine" wx:if='{{kneadDegree>0}}' style="width: {{kneadDegree==1?'0':kneadDegree==2?'50':100}}%"></view>
					<view class="boll" wx:if='{{kneadDegree>0}}' style="left: {{kneadDegree==1?'0':kneadDegree==2?'135':265}}rpx"></view>
				</view>
			</view>
			<!-- 通风力度 -->
			<!-- <view class=" left" bindtap="handleKneadModel"> -->
			<view class="efforts {{kneadModel>0?'effortsOpen':'effortsClose'}} left" bindtap="handleKneadModel">
				<image class="malaxation" src="../../assets/yy07_malaxation.png"></image>
				<text class="effortsTxt">揉捏-{{kneadModel==1?'正转':kneadModel==2?'反转':kneadModel==3?'自动切换':'关'}}</text>
			</view>
		</view>
		<!-- 定时 -->
		<view class="timerBox">
			<view class="title">
				<text class="big">定时</text>
				<text class="small">（分钟）</text>
			</view>
			<view class="timerMain clearfloat">
				<view class="timerLine"></view>
				<view class='timerItem left' style="margin-left: 16rpx" bindtap="handleSwitchTimer" data-time="10">
					<text style="opacity: {{timing==10?1:0.5}}">10</text>
					<view class="boll">
						<image wx:if='{{timing == 10}}' class="bollTimer" src="../../assets/yy06_timing.png"></image>
					</view>
				</view>
				<view class='timerItem left marginleft' bindtap="handleSwitchTimer" data-time="20">
					<text style="opacity: {{timing==20?1:0.5}}">20</text>
					<view class="boll">
						<image wx:if='{{timing == 20}}' class="bollTimer" src="../../assets/yy06_timing.png"></image>
					</view>
				</view>
				<view class='timerItem left marginleft' bindtap="handleSwitchTimer" data-time="30">
					<text style="opacity: {{timing==30?1:0.5}}">30</text>
					<view class="boll">
						<image wx:if='{{timing == 30}}' class="bollTimer" src="../../assets/yy06_timing.png"></image>
					</view>
				</view>
				<view class='timerItem left marginleft' bindtap="handleSwitchTimer" data-time="40">
					<text style="opacity: {{timing==40?1:0.5}}">40</text>
					<view class="boll">
						<image wx:if='{{timing == 40}}' class="bollTimer" src="../../assets/yy06_timing.png"></image>
					</view>
				</view>
				<view class='timerItem left marginleft' bindtap="handleSwitchTimer" data-time="50">
					<text style="opacity: {{timing==50?1:0.5}}">50</text>
					<view class="boll">
						<image wx:if='{{timing == 50}}' class="bollTimer" src="../../assets/yy06_timing.png"></image>
					</view>
				</view>
				<view class='timerItem left marginleft' bindtap="handleSwitchTimer" data-time="60">
					<text style="opacity: {{timing==60?1:0.5}}">60</text>
					<view class="boll">
						<image wx:if='{{timing == 60}}' class="bollTimer" src="../../assets/yy06_timing.png"></image>
					</view>
				</view>
			</view>
		</view>
		<!-- 电源 -->
		<image class="power" bindtap="handleSwichPower" src="../../assets/yy06_power_switch_{{power?'on':'off'}}.png"></image>
	</view>
</view>