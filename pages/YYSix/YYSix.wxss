/* 控制 */
.center {
    margin-top: 50rpx;
    margin-left: 26rpx;
    margin-right: 26rpx;
}

.degree,
.efforts {
    width: 292rpx;
    border-radius: 10rpx;
    background-color: #484d66;
    padding: 24rpx;
    text-align: left;
    display: inline-block;
}

.degree .title {
    color: #ffffff;
}

.efforts {
    background-image: linear-gradient(0deg,
            #ffc066 0%,
            #ff894d 100%);
}

.degree .text {
    font-family: PingFang SC;
    font-size: 22rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 30rpx;
    letter-spacing: 0rpx;
    color: #ffffff;
    opacity: 0.7;
    margin-top: 16rpx;
    margin-bottom: 30rpx;
}

.degree .line {
    width: 293rpx;
    height: 12rpx;
    background-color: #6d7185;
    border-radius: 6rpx;
    margin-top: 24rpx;
    margin-bottom: 12rpx;
    position: relative;
}

.line .showLine {
    background-color: #ff944d;
    border-radius: 6rpx;
    height: 100%;
}

.line .boll {
    width: 10rpx;
    height: 10rpx;
    background-color: #ff944d;
    border: solid 10rpx #ffffff;
    border-radius: 20rpx;
    position: absolute;
    top: -10rpx;
}

